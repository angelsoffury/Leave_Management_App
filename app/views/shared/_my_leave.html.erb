<div class="text-center">
  <% if @user.manager_id %>
    <%= link_to "Apply New Leave", new_user_leave_path(@user),
                                class: "btn btn-large btn-primary" %><br>
  <% end %>
  <% if @user.leave.any? %>
    <h4 class="text-left"  style="text-decoration:underline;">Leaves (<%= current_user.leave.count %>) </h4>

    <table  class="table table-hover">
      <thead>
        <tr>
          <th>Leave Type</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <% @user.leave.each do |leave| %>
          <tr> 
            <td><%= link_to leave.leave_type, user_leave_path(@user, leave.id) %></td>
            <td><%= leave.start_date %></td>
            <td><%= leave.end_date%></td>
            <td><%= leave.status %></td>
          </tr>
        <% end %>
      </tbody>
   </table>
  <% end %>
</div>